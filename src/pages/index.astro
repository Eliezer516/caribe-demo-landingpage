---
import Layout from "../layouts/Layout.astro";

const regionCaribe = await (
	await fetch("https://api-colombia.com/api/v1/Region/1")
).json();

const departamentosDelCaribe = await (
	await fetch("https://api-colombia.com/api/v1/Region/1/departments")
).json();
---

<Layout title="Turismo en el Atlántico">
	<main>
		<div class="min-h-screen bg-gray-50 flex items-center">
			<section class="hero py-10">
				<div class="container mx-auto text-left text-white p-10">
					<div class="flex flex-col lg:flex-row items-center">
						<div class="lg:w-1/2 mb-6 lg:mb-0 text-center lg:text-left">
							<h1 class="text-5xl font-medium mb-6">
								¡Ven a visitar Colombia!
							</h1>
							<p class="text-xl mb-6">
								{regionCaribe.description}
							</p>
							<div class="flex justify-center lg:justify-start">
								<a
									href="#"
									class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mb-4 lg:mb-0 lg:mr-4 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
									>Ver los destinos</a
								>
							</div>
						</div>
						<div class="lg:w-1/2 pl-0 lg:pl-16">
							<img
								src="https://images.pexels.com/photos/1450372/pexels-photo-1450372.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
								class="h-64 w-full object-cover rounded-xl"
								alt="Layout Image"
							/>
						</div>
					</div>
				</div>
			</section>
		</div>
	</main>
</Layout>

<style>
	.hero {
		min-height: 100vh;
		background-image: url("https://images.pexels.com/photos/20562283/pexels-photo-20562283/free-photo-of-mar-playa-vacaciones-relajacion.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1");
		background-size: cover;
		background-position: center;
		background-repeat: no-repeat;
		display: flex;
		align-items: center;
		justify-content: center;
	}
</style>